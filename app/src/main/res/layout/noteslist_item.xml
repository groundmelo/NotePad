<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:stateListAnimator="@anim/card_elevation"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">
        
        <View
            android:id="@+id/category_color_indicator"
            android:layout_width="12dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:background="#9E9E9E"
            android:contentDescription="Category Color" />
        
        <ImageView
            android:id="@+id/todo_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toEndOf="@+id/category_color_indicator"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:contentDescription="Todo Status" />
        
        <TextView
            android:id="@android:id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/todo_icon"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:singleLine="false"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/text_primary" />
        
        <TextView
            android:id="@+id/category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@android:id/text1"
            android:layout_marginTop="4dp"
            android:background="@drawable/category_badge"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="12sp"
            android:textColor="@color/text_primary" />
        
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@android:id/text1"
            android:layout_toEndOf="@+id/todo_icon"
            android:layout_toStartOf="@+id/category_text"
            android:layout_marginTop="4dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_primary"
            android:singleLine="false"
            android:maxLines="2"
            android:ellipsize="end" />
        
        <TextView
            android:id="@+id/modification_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_toEndOf="@+id/todo_icon"
            android:layout_marginTop="4dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_secondary" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
